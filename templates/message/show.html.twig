{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Expediteur</th>
                <td>{{ message.user.firstanme }} {{ message.user.lastname }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ message.datetime ? message.datetime|date('d-m-Y  -   H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_message_index') }}">back to list</a>

    <a href="{{ path('app_message_edit', {'id': message.id}) }}">edit</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
