{% extends 'base.html.twig' %}

{% block title %}Hello StaffController!{% endblock %}

{% block body %}
 <a class="btn btn-success mb-3" href="{{ path('app_staff_add') }}">Ajouter</a>
<table class="table table-bordered">
{% for row in staff %}
        <tr>
            <td>{{ row.firstname}} {{row.lastname}}</td>
            <td>{{ row.fonction }}</td>
            <td>
                <a href="{{ path('app_staff_detail', {'id':row.id} ) }}" class="btn btn-info fa-solid fa-magnifying-glass" title="Detail"></a>
                <a href="{{ path('app_staff_edit', {'id':row.id} ) }}" class="btn btn-primary fa-solid fa-pen-to-square" title="Modifier"></a>
                <a href="{{ path('app_staff_delete', {'id':row.id}) }}" class="btn btn-danger fa fa-trash" title="Supprimer"></a>
            </td>
        </tr>

    {% endfor %}
    </table>
{% endblock %}
